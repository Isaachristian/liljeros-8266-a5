<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" styleClass="gridPane" xmlns="http://javafx.com/javafx/16"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.InventoryController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="300.0" prefWidth="450.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="38.0" minHeight="38.0" prefHeight="38.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30" minHeight="30" prefHeight="30"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>

        <!--Add, Import, and Export buttons-->
        <HBox prefHeight="100.0" prefWidth="200.0" styleClass="interfaceButtonsContainer">
            <children>
                <Button prefHeight="30.0" prefWidth="74.0" translateX="4" translateY="4"
                        styleClass="interfaceButtons, primaryInterfaceButton" text="Add Item"
                        onMouseClicked="#addItem"/>
                <Button fx:id="importButton" prefHeight="30.0" prefWidth="30.0" translateX="8" translateY="4"
                        styleClass="interfaceButtons, secondaryInterfaceButton" onMouseClicked="#importInventory"/>
                <Button fx:id="exportButton" prefHeight="30.0" prefWidth="30.0" translateX="12" translateY="4"
                        styleClass="interfaceButtons, secondaryInterfaceButton" onMouseClicked="#exportInventory"/>
            </children>
        </HBox>

        <!--Search Box-->
        <GridPane styleClass="searchBoxContainer" GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField prefHeight="30.0" styleClass="interfaceTextInputs" fx:id="searchBox"/>
            </children>
        </GridPane>

        <!--Inventory Display-->
        <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS" GridPane.columnSpan="2"
                    GridPane.rowIndex="2" styleClass="inventoryContentsScrollPane" fitToWidth="true">
            <content>
                <VBox prefWidth="578.0" fx:id="inventoryContents" styleClass="inventoryContents">

                    <!--Item-->
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="100" minWidth="100"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="10" minWidth="10" maxWidth="10"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="350"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="10" minWidth="10" maxWidth="10"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="90" minWidth="90"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="30" minWidth="30" maxWidth="30"/>
                        </columnConstraints>
                        <Label styleClass="labels" GridPane.columnIndex="0" text="12345ABCDE"/>
                        <Label styleClass="labels" GridPane.columnIndex="2" text="This is the name of the item"/>
                        <Label styleClass="labels" GridPane.columnIndex="4" text="20.00"/>
                        <Button styleClass="toggleEditButton, interfaceButtons" GridPane.columnIndex="5" text="*"
                                prefWidth="30"/>
                    </GridPane>

                    <!--Spacing-->
                    <Label text="***this is for spacing***"/>

                    <!--Editing Item-->
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="100" minWidth="100"              />
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="10"  minWidth="10"  maxWidth="10"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="350"                             />
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="10"  minWidth="10"  maxWidth="10"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="80"  minWidth="80"               />
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="10"  minWidth="10"  maxWidth="10"/>
                            <ColumnConstraints hgrow="ALWAYS" prefWidth="30"  minWidth="30"  maxWidth="30"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="NEVER" prefHeight="34" minHeight="34" maxHeight="34"/>
                            <RowConstraints vgrow="NEVER" prefHeight="34" minHeight="34" maxHeight="34"/>
                            <RowConstraints vgrow="NEVER" prefHeight="34" minHeight="34" maxHeight="34"/>
                        </rowConstraints>


                        <TextField styleClass="interfaceTextInputs" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextArea styleClass="interfaceTextInputs" GridPane.columnIndex="2" GridPane.rowIndex="0"
                                  GridPane.rowSpan="3"/>
                        <TextField styleClass="interfaceTextInputs" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                        <Button styleClass="confirmButton, interfaceButtons" GridPane.columnIndex="6"
                                GridPane.rowIndex="0" text="C"
                                prefWidth="30" prefHeight="30"/>
                        <Button styleClass="cancelButton, interfaceButtons" GridPane.columnIndex="6"
                                GridPane.rowIndex="1" text="X"
                                prefWidth="30" prefHeight="30"/>
                        <Button styleClass="deleteButton, interfaceButtons" GridPane.columnIndex="6"
                                GridPane.rowIndex="2" text="XX"
                                prefWidth="30" prefHeight="30"/>


                    </GridPane>
                </VBox>
            </content>
        </ScrollPane>

        <!--Labels-->
        <GridPane GridPane.rowIndex="1" GridPane.columnSpan="2" styleClass="labelsContainer">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="100" minWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="10" minWidth="10" maxWidth="10"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="350"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="10" minWidth="10" maxWidth="10"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="120" minWidth="120"/>
            </columnConstraints>
            <Label styleClass="labels" GridPane.columnIndex="0" text="Serial Number"/>
            <Label styleClass="labels" GridPane.columnIndex="1" text="|"/>
            <Label styleClass="labels" GridPane.columnIndex="2" text="Name"/>
            <Label styleClass="labels" GridPane.columnIndex="3" text="|"/>
            <Label styleClass="labels" GridPane.columnIndex="4" text="Value"/>
        </GridPane>
    </children>
</GridPane>
